@using LeagueData.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
		<ul class="mr-lg-1 navbar-nav">
			<li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="LogOut">Odhlásit se</a></li>
		</ul>
}
else
{
	<ul class="mr-lg-1 navbar-nav">
		<li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Registrace</a></li>
		<li><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Přihlášení</a></li>
	</ul>
}
