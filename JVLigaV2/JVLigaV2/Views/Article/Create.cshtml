@model JVLigaV2.Models.Articles.ArticleCreateModel

@{
	ViewData["Title"] = "Vytvořit článek";
}

<div class="row">
	<div class="col-md-11 mx-auto">
		<form asp-action="Create" id="articleForm" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
				<div class="col-lg-4">
					<div class="form-group">
						<label asp-for="Title"></label>
						<input asp-for="Title" class="form-control" />
						<span asp-validation-for="Title" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="form-group">
						<label asp-for="Description"></label>
						<input asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="form-group">
						<label asp-for="ArticleImage"></label>
						<input asp-for="ArticleImage"/>
						<span asp-validation-for="ArticleImage" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-4">
					<div class="form-group">
						<label asp-for="TeamId"></label>
						<select asp-for="TeamId" asp-items="@ViewBag.Teams" class="form-control"></select>
						<span asp-validation-for="TeamId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="form-group">
						<label asp-for="PlayerId"></label>
						<select asp-for="PlayerId" asp-items="@ViewBag.Players" class="form-control"></select>
						<span asp-validation-for="PlayerId" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="form-group">
						<label asp-for="MatchId"></label>
						<select asp-for="MatchId" asp-items="@ViewBag.Matches" class="form-control"></select>
						<span asp-validation-for="MatchId" class="text-danger"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<label asp-for="Body"></label>
						<textarea name="Body" id="Body" asp-for="Body" class="form-control"></textarea>
						<span asp-validation-for="Body" class="text-danger"></span>
					</div>
				</div>
			</div>
				<div class="form-group">
					<input type="submit" value="Create" class="btn btn-secondary btn-sm" />
				</div>
</form>
	</div>
</div>

<script type="text/javascript" src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>
<script type="text/javascript">
				tinymce.init({
						selector: "textarea[name=Body]",
						plugins: [
								"advlist autolink lists link image charmap print preview anchor",
								"searchreplace visualblocks code fullscreen",
								"insertdatetime media table contextmenu paste"
						],
						toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
						entities: "160,nbsp",
						entity_encoding: "named",
						entity_encoding: "raw"
				});
</script>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
