@using JVLigaV2.LeagueData.Models
@model JVLigaV2.Models.Match.MatchEditModel

@{
	ViewData["Title"] = Model.Title;
}

<h2>@Model.Title</h2>
<hr />
<div class="row">
	<div class="col-lg-6">
		<p>Domácí: </p><h3><b>@Model.MatchWithTeams.HomeTeam.Name</b></h3>
		<p>Hosté: </p><h3><b>@Model.MatchWithTeams.GuestTeam.Name</b></h3>
		<p>Datum:</p><h3><b>@Model.MatchWithTeams.Date</b></h3>
	</div>
	
<div class="col-lg-6">
		
	<form asp-action="Edit">
		<input type="hidden" asp-for="Match.Id" />
		@for(int i = 0 ; i < Model.Results.Count() ; i++)
		{
			<input type="hidden" asp-for="@Model.Results[i].Id" />
			<div class="row mb-lg-3">
				<div class="col-lg-3">
					@if (Model.Results[i] == Model.Results.FirstOrDefault())
					{
						<label asp-for="@Model.Results[i].Set"></label>
					}
					<input asp-for="@Model.Results[i].Set" class="form-control" />
					<span asp-validation-for="@Model.Results[i].Set" class="text-danger"></span>
				</div>
				<div class="col-lg-3">
					@if (Model.Results[i] == Model.Results.FirstOrDefault()){<label asp-for="@Model.Results[i].HomeTeamPoints"></label>}
					<input asp-for="@Model.Results[i].HomeTeamPoints" class="form-control" />
					<span asp-validation-for="@Model.Results[i].HomeTeamPoints" class="text-danger"></span>
				</div>
				<div class="col-lg-3">
					@if (Model.Results[i] == Model.Results.FirstOrDefault()){<label asp-for="@Model.Results[i].GuestTeamPoints"></label>}
					<input asp-for="@Model.Results[i].GuestTeamPoints" class="form-control" />
					<span asp-validation-for="@Model.Results[i].GuestTeamPoints" class="text-danger"></span>
				</div>
			</div>
		}
		<div class="row">
			<div class="col-lg-12">
				<div class="form-group">
					<input type="submit" value="Zadat výlsedky" class="btn btn-light" />
				</div>
			</div>
		</div>
	</form>
</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

	

