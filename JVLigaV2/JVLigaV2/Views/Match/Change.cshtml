@model JVLigaV2.Models.Match.MatchChangeModel


@{
	ViewData["Title"] = "Změnit datum";
}

<div class="row">
	<div class="col-lg-12 mx-auto text-center">
		<h2>@Html.Raw(Model.Match.HomeTeam.Name + "-" + Model.Match.GuestTeam.Name)</h2>
	</div>
</div>
<div class="row">
	<div class="col-lg-3 mx-auto text-center">
		<form asp-action="Change">
			<input type="hidden" asp-for="@Model.Match.Id"/>
			<label asp-for="@Model.NewDateTime"></label>
			<div class="row mb-lg-2">
				<input asp-for="@Model.NewDateTime" class="form-control" />
				<span asp-validation-for="@Model.NewDateTime" class="text-danger"></span>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<input type="submit" value="Změnit datum" class="btn btn-light" />
					</div>
				</div>
			</div>
		</form>
	</div>
</div>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
